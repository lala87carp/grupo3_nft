<%- include('./partials/head') %>

  <body>
    <%- include('./partials/header') %>
      <main>
        <!--Administrador de productos-->
        <section class="row">
          <article class="col ">
            <h2 class="admin">Administrador de Productos </h2>
          </article>
          
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">Id</th>
                  <th scope="col">Nombre</th>
                  <th scope="col">Ver</th>
                  <th scope="col">Editar</th>
                  <th scope="col">Borrar</th>
                </tr>
              </thead>
              <tbody>
                <% products.forEach(products=> { %>


                  <tr>
                    <td>
                      <%= products.id%>
                    </td>
                    <td>
                      <%= products.name%>
                    </td>


                    <td><a href="/product/detail/<%= products.id%> ">
                        <ion-icon name="eye-outline"></ion-icon>
                      </a></td>
                    <td><a href="product/update/<%= products.id%> ">
                        <ion-icon name="pencil-outline"></ion-icon>
                      </a></td>
                    <td> <a href="/product/delete/<%= products.id%>">
                        <ion-icon name="trash-outline"></ion-icon>
                      </a></td>
                  </tr>
                  

                  <% }); %>
                    <hr />
              </tbody>

            </table>

          </article>
          <hr />
        </section>
        <a href="/product/create">

          <button class="login-button"> Agregar producto </button>
        </a>
        <script src="https://unpkg.com/ionicons@5.2.3/dist/ionicons.js"></script>
      </main>


  </body>
  <%- include('./partials/footer.ejs') %>