<%- include('./partials/head') %>


    <%- include('./partials/header') %>
 <main>

            <body>


                <div class="container products-wrapper">
                    <div class="errores">
                        <ul>
                            <% typeof errors != 'undefined' && errors.forEach(error => { %>
                                <li> <%= error.msg %></li>
                              <%})%>
                        </ul>
                      </div>
                    <div class="row">
                        <div class="col-12">
                            <h2 class=>Formulario de creación de productos</h2>
                        </div>
                        <br>
                    </div>
                    <div class="col-12">
                        <form action="/product/create" method="post" enctype='multipart/form-data' id="createForm">
                            <div class="row product-detail">
                                <div class="col-12 col-md-6">
                                    <label for="name" class="form-label" >Nombre del producto:</label>
                                    <input type="text" name="name" placeholder="Ej: mono momia" class="form-input" id="nombreCreate">
                                </div>
                                <br>

                                <div class="col-12 col-md-6">
                                    <label for="price" class="form-label">Precio del producto:</label>
                                    <input type="text" id="price" name="price" placeholder="Ej: 50.000"
                                        class="form-input">
                                </div>
                                <br>
                                <div class="col-12 col-md-6">
                                    <label for="discount" class="form-label">Autor:</label>
                                    <input type="text" id="autor" name="autor" placeholder="Ej: Rick"
                                        class="form-input">
                                </div>
                                <br>

                                <div class="col-12 col-md-6">
                                    <label for="category_id" class="form-label">Categoría:</label>
                                    <select name="category_id" id="category_id" class="form-input">
                                        <option value="">Elegí</option>
                                        <option value="1">premium</option>
                                        <option value="2">Últimos agregados</option>
                                        <option value="3">Últimos días</option>
                                        <option value="4">Más comprados</option>
                                    </select>
                                </div>
                                <br>
                                <div class="col-12">
                                    <label for="description" class="form-label">Descripción:</label>
                                    <textarea name="description" id="description" class="form-input"> </textarea>
                                </div>
                                <br>
                                <div class="col-12">
                                    <label for="image" class="form-label" id="imageCreate">Imagen:</label>
                                    <input name="image" id="image" class="form-input" type="file">
                                </div>
                                <br>

                                <div class="col-12">
                                    <button type="submit" class="login-button">Guardar producto</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <script src="/js/productCreateValidation.js"></script>

            </body>
        </main>
        <%- include('./partials/footer') %>

            </html>