<%- include('./partials/head') %>

    <body>
        <%- include('./partials/header') %>
            <link rel="stylesheet" href="/css/detail.css">

            <main>
                

                <section class="products">
                    <% if (products.length > 0) { %>
                    <h3 class="p">PRODUCTOS</h3>
                    <div class="galeria-obras">
                        <% products.forEach(product=>{ %>
                            <article>

                                <div class="card">
                                    <a href="/product/detail/<%=product.id%>"><img
                                            src="/images/productImg/<%=product.image%>"></a>
                                    <br>
                                    <h3>
                                        <%= product.name %>
                                    </h3><br>
                                    <h4 class="productdetail">Detalle del producto: <%= product.description %>
                                    </h4>
                                    <br>
                                    <p>
                                        Autor: <%= product.autor %>
                                    </p>
                                    <br>
                                    <p class="price">Valuado en $<%= product.price %>
                                    </p>
                                    <br>

                                </div>

                            </article>
                            <% }) %>
                    </div>
                    <% }else { %> 
                        <h3>Lo sentimos, no encontramos el producto que estas buscando</h3>
                        <% }  %>

                </section>
            </main>
            <%- include('./partials/footer') %>



    </body>

    </html>